<body>
  <h2>Resolución de Programación Lineal</h2>

  <p>Función objetivo: <strong>Max Z = 60X + 80Y</strong></p>
  <p>Sujeto a:</p>
  <ul>
    <li>4X + 2Y ≤ 100</li>
    <li>2X + 3Y ≤ 90</li>
    <li>X ≥ 0</li>
    <li>Y ≥ 0</li>
  </ul>

  <button onclick="resolver()">Resolver</button>

  <div class="resultado" id="resultado"></div>

  <script>
    function resolver() {
      // Definir el modelo
      const model = {
        optimize: "z",
        opType: "max",
        constraints: {
          ec1: { max: 100 },
          ec2: { max: 90 }
        },
        variables: {
          x: {
            ec1: 4,
            ec2: 2,
            z: 60
          },
          y: {
            ec1: 2,
            ec2: 3,
            z: 80
          }
        },
        ints: {}
      };

      const results = solver.Solve(model);

      // Mostrar resultado
      document.getElementById("resultado").innerHTML = `
        <strong>Resultado Óptimo:</strong><br>
        Z = ${results.result}<br>
        X = ${results.x}<br>
        Y = ${results.y}
      `;
    }
  </script>
</body>
</html>
